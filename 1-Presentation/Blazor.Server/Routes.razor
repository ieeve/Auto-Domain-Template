
<CascadingAuthenticationState>
            <Router AppAssembly="@typeof(Program).Assembly" AdditionalAssemblies="_PageRouteData.AdditionalPages">
                <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Modules.Core.Blazor.Layouts.EmptyLayout)">
                        <Authorizing>
                            <h2 style="text-align:center;padding-top:16px;"><Spin /></h2>
                        </Authorizing>
                        <NotAuthorized>
                            @if (context.User.Identity == null)
                            {
                                <Modules.Core.Blazor.PagesAnonymous.RedirectToLogin />
                            }
                            else
                            {
                                <Result Status="ResultStatus.Http403" Title="无权访问" SubTitle="未经授权的访问" />
                            }
                        </NotAuthorized>
                    </AuthorizeRouteView>
            @*导航到新页面时，FocusOnNavigate 组件将焦点设置到页面的顶层元素 input*@
                    <FocusOnNavigate RouteData="@routeData" Selector="h2" />
                </Found>
                <NotFound>
                    <Modules.Core.Blazor.Pages.PageResult._404 />
                </NotFound>
            </Router>
    <AntDesign.AntContainer @rendermode="@renderMode" />
</CascadingAuthenticationState>
@code {
    private readonly IComponentRenderMode renderMode = new InteractiveServerRenderMode(prerender: false);
}